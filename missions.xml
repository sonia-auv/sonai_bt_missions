<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="boot_sequence">
    <Sequence>
      <EnableDisableDVL dvl_input="true"/>
      <ControlSetMode set_mode="true"/>
      <SubTree ID="MoveSinglePose"
               positionX="0.0"
               positionY="0.0"
               positionZ="0.5"
               orientationX="0.0"
               orientationY="0.0"
               orientationZ="0.0"
               frame="1"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="enable_mission">
    <Sequence>
      <RetryUntilSuccessful num_attempts="-1">
        <MissionSwitchStatus/>
      </RetryUntilSuccessful>
      <SubTree ID="boot_sequence"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="mission_dropper">
    <Sequence>
      <RetryUntilSuccessful num_attempts="-1">
        <MissionSwitchStatus/>
      </RetryUntilSuccessful>
      <ActuatorsAction side="port_side"
                       Actuator="0"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="ActuatorsAction">
      <input_port name="side"
                  type="std::string">port_side or starboard</input_port>
      <input_port name="Actuator"
                  type="int">0: Dropper, 1: Torpedo</input_port>
    </Action>
    <Action ID="ControlSetMode">
      <input_port name="set_mode"
                  default="false"
                  type="bool"/>
    </Action>
    <Action ID="EnableDisableDVL">
      <input_port name="dvl_input"
                  default="true"
                  type="bool"/>
    </Action>
    <Condition ID="MissionSwitchStatus"/>
    <SubTree ID="MoveSinglePose"
             editable="true">
      <input_port name="positionX"
                  default="0.0"/>
      <input_port name="positionY"
                  default="0.0"/>
      <input_port name="positionZ"
                  default="0.0"/>
      <input_port name="orientationX"
                  default="0.0"/>
      <input_port name="orientationY"
                  default="0.0"/>
      <input_port name="orientationZ"
                  default="0.0"/>
      <input_port name="frame"
                  default="1"/>
    </SubTree>
  </TreeNodesModel>

</root>
